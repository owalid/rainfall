int lang;

void	greetuser(char* arg)
{
	char *str;
	int n;

	if (lang == 1)
		str = "Hello ";
	else if (lang == 2)
		str = "Hyvää päivää ";
	else if (lang == 0)
		str = "Goedemiddagi! ";

	strcat(str, arg);
	return puts(str);
}

int main(int argi, char **arg)
{
	Int ret;
	Char *var_60;
	Char *edi_1;
